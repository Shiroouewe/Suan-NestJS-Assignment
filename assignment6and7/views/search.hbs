<div class="job-search">
    <h1 class="text-center mb-4">{{title}}</h1>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Search for Job Details</h5>
            <form action="/search" method="get" class="mt-3">
                <div class="mb-3">
                    <label for="jobId" class="form-label">Job ID</label>
                    <input type="text" class="form-control" id="jobId" name="jobId" 
                           placeholder="Enter Twitter Job ID" required>
                </div>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>

    {{#if error}}
    <div class="alert alert-danger" role="alert">
        {{error}}
    </div>
    {{/if}}

    {{#if job}}
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Job Details</h5>
            <pre class="mt-3">{{json job}}</pre>
        </div>
    </div>
    {{/if}}
</div> 